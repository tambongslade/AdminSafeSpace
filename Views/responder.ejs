<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Emergency Responders</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="flex">
  <%- include('components/navbar.ejs') %>
  <div class="flex-1 p-6 bg-gray-100 overflow-y-auto">
    <div class="bg-white p-6 shadow-lg">
      <h1 class="text-3xl font-bold">Emergency Responders</h1>
      <div class="mt-4 flex items-center">
        <input type="text" placeholder="Search..." class="px-4 py-2 border rounded-full flex-1">
        <button onclick="location.href='/add_responders'" class="ml-4 bg-blue-500 text-white px-4 py-2 rounded-full">New</button>
      </div>
    </div>
    <div class="bg-white mt-6 p-6 shadow-lg rounded-md">
      <table class="w-full">
        <thead class="bg-gray-100">
          <tr>
            <th class="text-left p-4">NAME</th>
            <th class="text-left p-4">LOCATION</th>
            <th class="text-left p-4">CONTACT</th>
            <th class="text-left p-4">CATEGORY</th>
            <th class="text-left p-4"></th>
          </tr>
        </thead>
        <tbody>
          <% responders.forEach(responder => { %>
            <tr class="bg-white border-b">
              <td class="p-4"><%= responder.name %></td>
              <td class="p-4"><%= responder.location %></td>
              <td class="p-4"><%= responder.contact %></td>
              <td class="p-4"><%= responder.category %></td>
              <td class="p-4 flex space-x-2">
                <button class="text-blue-500">‚úèÔ∏è</button>
                <button class="text-red-500">üóëÔ∏è</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
