<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin SafeSpace Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="flex">
        <!-- Sidebar -->
        <%- include ('components/navbar.ejs') %>
        <!-- Main content -->
        <main class="flex-1 p-6">
            <h1 class="text-2xl font-bold mb-4">Dashboard</h1>
            <div class="grid grid-cols-3 gap-6 mb-6">
                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-sm font-medium text-gray-600">Total User</h2>
                            <p class="text-3xl font-bold">40,689</p>
                            <p class="text-green-500 text-sm">8.5% Up from yesterday</p>
                        </div>
                        <div class="text-purple-500">
                            <span class="material-icons text-4xl">person</span>
                        </div>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-sm font-medium text-gray-600">Total Emergency Responders</h2>
                            <p class="text-3xl font-bold">10,293</p>
                            <p class="text-green-500 text-sm">1.3% Up from past week</p>
                        </div>
                        <div class="text-yellow-500">
                            <span class="material-icons text-4xl">medical_services</span>
                        </div>
                    </div>
                </div>
                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-sm font-medium text-gray-600">Total Pending</h2>
                            <p class="text-3xl font-bold">2,040</p>
                            <p class="text-green-500 text-sm">1.8% Up from yesterday</p>
                        </div>
                        <div class="text-red-500">
                            <span class="material-icons text-4xl">pending</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-bold">Recent Alerts</h2>
                    <div>
                        <select class="border p-2 rounded">
                            <option>October</option>
                        </select>
                    </div>
                </div>
                <table class="w-full table-auto">
                    <thead>
                        <tr>
                            <th class="px-4 py-2">User-Name</th>
                            <th class="px-4 py-2">Location</th>
                            <th class="px-4 py-2">Date - Time</th>
                            <th class="px-4 py-2">Disaster Type</th>
                            <th class="px-4 py-2">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="border px-4 py-2 flex items-center">
                                <img src="user-image.png" alt="User Image" class="w-8 h-8 rounded-full mr-2">
                                Stephan Louis
                            </td>
                            <td class="border px-4 py-2">Mile 17</td>
                            <td class="border px-4 py-2">12.09.2019 - 12.53 PM</td>
                            <td class="border px-4 py-2">Flood</td>
                            <td class="border px-4 py-2">
                                <span class="bg-green-500 text-white px-2 py-1 rounded-full text-xs">Deliver</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="border px-4 py-2 flex items-center">
                                <img src="user-image.png" alt="User Image" class="w-8 h-8 rounded-full mr-2">
                                Stephan Louis
                            </td>
                            <td class="border px-4 py-2">Mile 17</td>
                            <td class="border px-4 py-2">12.09.2019 - 12.53 PM</td>
                            <td class="border px-4 py-2">Flood</td>
                            <td class="border px-4 py-2">
                                <span class="bg-yellow-500 text-white px-2 py-1 rounded-full text-xs">Pending</span>
                            </td>
                        </tr>
                        <tr>
                            <td class="border px-4 py-2 flex items-center">
                                <img src="user-image.png" alt="User Image" class="w-8 h-8 rounded-full mr-2">
                                Stephan Louis
                            </td>
                            <td class="border px-4 py-2">Mile 17</td>
                            <td class="border px-4 py-2">12.09.2019 - 12.53 PM</td>
                            <td class="border px-4 py-2">Flood</td>
                            <td class="border px-4 py-2">
                                <span class="bg-red-500 text-white px-2 py-1 rounded-full text-xs">Reject</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Example JS for toggling active class
            const menuItems = document.querySelectorAll('aside nav ul li');
            menuItems.forEach(item => {
                item.addEventListener('click', () => {
                    menuItems.forEach(i => i.classList.remove('bg-blue-100'));
                    item.classList.add('bg-blue-100');
                });
            });
        });
    </script>
    
</body>
</html>
